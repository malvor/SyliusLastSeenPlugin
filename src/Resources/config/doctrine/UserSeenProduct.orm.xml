<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Websnacks\SyliusLastSeenPlugin\Entity\UserSeenProduct" table="websnacks_last_seen_product">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="cookie" type="string" length="128"/>
        <field name="views" type="integer" column="views"/>
        <field name="lastSeenAt" type="datetime" column="created_at"/>
    </mapped-superclass>
</doctrine-mapping>